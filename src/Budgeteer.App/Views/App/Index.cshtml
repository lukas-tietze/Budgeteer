@{
    Layout = null;
}

@using Budgeteer.App.Config

<!DOCTYPE html>

<html lang="de">
<head>
    @{
        var config = Context.Items["Config"] as AppConfig ?? throw new NotSupportedException();
    }
    <base href="@(config.Paths.BaseHref)" />
    <vite-link href="favicon.ico" />

    <vite-require-script src="ts/index.ts" />
    <vite-style src="scss/index.scss" />

    <vite-head />
</head>

<body class="w-screen h-screen flex flex-col">
    <div id="App" class="flex-1 flex flex-col"></div>

    <noscript>
        <div class="h-screen w-screen flex flex-row items-center justify-center">
            Bitte aktivieren Sie JavaScript, um diese Seite zu nutzen.
        </div>
    </noscript>

    <vite-scripts />
